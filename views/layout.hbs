  <script>
    $("#form").submit(function (e) {
      e.preventDefault(); // avoid to execute the actual submit of the form.
      console.log('ajax')
      var url = "/calculate"; // the script where you handle the form input.

      $.ajax({
        type: "GET",
        url: url,
        data: $("#form").serialize(), // serializes the form's elements.
